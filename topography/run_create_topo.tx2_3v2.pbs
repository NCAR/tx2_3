#!/bin/csh

# PBS batch script to run threaded application on casper

#PBS -N create_model_topo
#PBS -q casper
#PBS -A NCGD0011
#PBS -l walltime=0:10:00
#PBS -l select=1:ncpus=16:ompthreads=16:mpiprocs=1:mem=30GB
#PBS -j oe

set echo on
echo "Job starting at " `date`

setenv TMPDIR  /glade/scratch/gmarques/tmp
setenv OMP_NUM_THREADS ${NCPUS}
echo "Number of threads from script = " ${OMP_NUM_THREADS}

setenv GRID  tx2_3v2
setenv NSUB 150

cat > create_model_topo.in << EOF
&model_grid_nml
 nx_sub=${NSUB}
 ny_sub=${NSUB}
 mom6_grid_version='${GRID}'
 mom6_horiz_grid_file='../supergrid/ORCA_gridgen/ocean_hgrid.nc'
 grid_is_tripole=.true.
/
&topo_in_nml
 topo_in_file='/glade/campaign/cgd/oce/datasets/obs/topography/SRTM/SRTM15_V2.4.nc'
 vname_topo_lon='lon',
 vname_topo_lat='lat',
 vname_topo_z='z'
/
&output_nml
 jprnt=100
 ichk = 200
 verbose=.true.
 do_median = .true.
 mask_hmin=1.0
 mask_threshold=0.5
 output_file='topo.sub${NSUB}.${GRID}.srtm.nc'
 user_name='Frank Bryan'
/
EOF

time ./create_model_topo < create_model_topo.in

echo "Job ending at " `date`
